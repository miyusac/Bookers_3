<%#編集画面の作成%>

<body>
    <div class="main-visual">
        <h1 class="main-visual-title">Editing Book</h1>
        
        <% if @book.errors.any? %>errors prohibited this book from being saved:
            <%= @book.errors.count %>
            <% @book.errors.full_messages.each do |message| %>
                <%= message %>
            <% end %>
        <% end %>
        
        <%= form_with model:@book, local:true do |f| %>
            <h4>Title</h4>
            <%= f.text_field :title %>
            <h4>Body</h4>
            <%= f.text_area :body %>
            
            <%=f.submit 'Update Book' %>
        <% end %>
        
        <%= link_to "Show", book_path(@book[:id]) %>
         | 
        <%= link_to "Back", books_path %>
    </div>
</body>